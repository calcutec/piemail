<a href="#">
    {{#if unread }}<strong>{{/if}}
        {{#if selected}}
            <span style="float:left;width:20px;"><input title="check" class="check" type="checkbox" checked="checked" /></span>
        {{ else }}
            <span style="float:left;width:20px;"><input title="check" class="check" type="checkbox" /></span>
        {{/if}}
        {{#if star}}
            <span style="float:left;width:20px;" class="star icon bookmark"> &nbsp; </span>
        {{ else }}
            <span style="float:left;width:20px;" class="star icon nobookmark"> &nbsp; </span>
        {{/if}}
        <span style="float:left;width:130px;overflow:hidden;margin-right:8px;white-space:nowrap;text-align:left;" class="sender">{{{sender}}}</span>
        <span style="float:left;width:150px;overflow:hidden;margin-right:8px;white-space:nowrap;text-align:left;" class="mail-subject">{{{subject}}}</span>
        <span style="float:left;width:40%;overflow:hidden;white-space:nowrap;text-align:left;color:#23707E;" class="mail-snippet">{{{snippet}}}</span>
        <span style="float:right;width:15%;overflow:hidden;white-space:nowrap;" class="timestamp">{{timestamp}}</span>
    {{#if unread}}</strong>{{/if}}
</a>
<div style="clear:both;"></div>